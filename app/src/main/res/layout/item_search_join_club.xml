<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="2dp"
    android:background="#1a1a1a"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="8dp">

    <com.qmuiteam.qmui.widget.QMUIRadiusImageView
        android:id="@+id/search_item_image_iv"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="4dp"
        android:clickable="false"
        android:src="@drawable/login_logo"
        app:qmui_border_color="?attr/qmui_config_color_gray_6"
        app:qmui_border_width="1px"
        app:qmui_is_circle="true" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="4dp">

        <TextView
            android:id="@+id/search_item_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:textColor="@color/qmui_config_color_white"
            android:textSize="14sp"
            tools:text="休闲娱乐" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/search_item_count_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/club_man_count_ic"
                android:gravity="center_vertical"
                android:textColor="@color/qmui_config_color_50_white"
                android:textSize="11sp"
                tools:text="20/100" />

            <TextView
                android:id="@+id/search_item_location_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:drawableLeft="@drawable/club_location_ic"
                android:gravity="center_vertical"
                android:textColor="@color/qmui_config_color_50_white"
                android:textSize="11sp"
                tools:text="香港" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/search_item_join_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="4dp"
        android:background="@drawable/login_register_bg"
        android:gravity="center"
        android:padding="4dp"
        android:text="@string/apply_for_join"
        android:textColor="@color/common_text_color"
        android:textSize="12sp" />
</LinearLayout>