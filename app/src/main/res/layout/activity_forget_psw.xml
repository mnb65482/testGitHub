<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.hcll.fishshrimpcrab.login.activity.ForgetPSWActivity">

    <com.qmuiteam.qmui.widget.QMUITopBar
        android:id="@+id/reset_topbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/qmui_topbar_height" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/qmui_config_color_black" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="12dp"
        android:layout_weight="8"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/common_edititem_noselect"
            android:orientation="horizontal"
            android:padding="4dp">

            <EditText
                android:id="@+id/reset_account_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:drawableLeft="@drawable/comm_ic_account"
                android:drawablePadding="8dp"
                android:hint="手机号"
                android:inputType="phone"
                android:maxLength="11"
                android:padding="4dp"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@drawable/common_edititem_noselect"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="4dp">

            <EditText
                android:id="@+id/reset_sms_psw"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/white"
                android:drawableLeft="@drawable/common_ic_lock_outline"
                android:drawablePadding="8dp"
                android:hint="验证码"
                android:inputType="number"
                android:maxLength="12"
                android:minLines="6"
                android:padding="4dp"
                android:textSize="16sp" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/qmui_config_color_gray_8" />

            <TextView
                android:id="@+id/reset_getsms_tv"
                android:layout_width="98dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="4dp"
                android:text="获取验证码"
                android:textColor="@color/register_sms_btn_black" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@drawable/common_edititem_noselect"
            android:orientation="horizontal"
            android:padding="4dp">

            <EditText
                android:id="@+id/reset_account_psw"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/white"
                android:drawableLeft="@drawable/common_ic_lock_outline"
                android:drawablePadding="8dp"
                android:hint="密码"
                android:inputType="textPassword"
                android:maxLength="12"
                android:minLines="6"
                android:padding="4dp"
                android:textSize="16sp" />

            <CheckBox
                android:id="@+id/reset_psw_visibility_cb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/common_psw_visibility_bg"
                android:paddingLeft="8dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/reset_account_commit_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@drawable/login_commit_btn_bg"
            android:gravity="center"
            android:padding="10dp"
            android:text="重置密码"
            android:textColor="@color/qmui_config_color_white"
            android:textSize="16sp" />
    </LinearLayout>


</LinearLayout>
