<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/verification_code_dialog_bg"
    android:orientation="vertical"
    android:padding="4dp">

    <ImageView
        android:id="@+id/update_max_close_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:padding="4dp"
        android:src="@drawable/verification_info_close_ic" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="8dp"
        android:text="@string/update_max_people"
        android:textColor="@color/qmui_config_color_white" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/qmui_config_color_50_white"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="2px">

        <ImageView
            android:id="@+id/update_max_less_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="2px"
            android:background="#2b2b2b"
            android:padding="6dp"
            android:src="@drawable/comm_less_disable_ic" />

        <TextView
            android:id="@+id/update_max_input_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#212124"
            android:gravity="center"
            android:minEms="4"
            android:textColor="@color/qmui_config_color_75_white"
            tools:text="100" />

        <ImageView
            android:id="@+id/update_max_add_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2px"
            android:background="#2b2b2b"
            android:padding="6dp"
            android:src="@drawable/comm_add_ic" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/club_create_fee"
            android:textColor="@color/qmui_config_color_white" />

        <TextView
            android:id="@+id/update_max_fee_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="4dp"
            android:drawableStart="@drawable/comm_diamonds_ic"
            android:gravity="center"
            android:textColor="@color/common_text_color"
            tools:text="100" />
    </LinearLayout>

    <TextView
        android:id="@+id/update_max_sure_tv"
        style="@style/common_commit_tv"
        android:layout_width="128dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="18dp"
        android:layout_marginTop="12dp"
        android:text="@string/ok" />

</LinearLayout>