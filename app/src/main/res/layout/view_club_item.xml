<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="2dp"
    android:background="#1a1a1a"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="8dp">

    <com.qmuiteam.qmui.widget.QMUIRadiusImageView
        android:id="@+id/club_item_icon"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:clickable="false"
        android:src="@drawable/login_logo"
        app:qmui_border_color="?attr/qmui_config_color_gray_6"
        app:qmui_border_width="1px"
        app:qmui_is_circle="true" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="4dp">

        <TextView
            android:id="@+id/club_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:textColor="@color/qmui_config_color_white"
            android:textSize="14sp"
            tools:text="休闲娱乐" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/club_item_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/club_man_count_ic"
                android:gravity="center_vertical"
                android:textColor="@color/qmui_config_color_50_white"
                android:textSize="11sp"
                tools:text="20/100" />

            <TextView
                android:id="@+id/club_item_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:drawableLeft="@drawable/club_location_ic"
                android:gravity="center_vertical"
                android:textColor="@color/qmui_config_color_50_white"
                android:textSize="11sp"
                tools:text="香港" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="4dp"
        android:background="#1fffffff" />

    <TextView
        android:id="@+id/club_item_game"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:drawablePadding="6dp"
        android:drawableTop="@drawable/club_game_ic"
        android:padding="4dp"
        android:textColor="#63c35b"
        android:textSize="12sp"
        tools:text="12桌" />

</LinearLayout>