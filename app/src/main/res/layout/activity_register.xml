        <!--android:paddingBottom="4dp"-->
        <!--android:paddingLeft="12dp"-->
        <!--android:paddingTop="4dp"-->
        <!--android:textSize="16sp" />-->


        <!--</LinearLayout>-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/login_edit_bg"
            android:orientation="horizontal"
            android:paddingBottom="2dp"
            android:paddingEnd="2dp"
            android:paddingStart="2dp">

            <EditText
                android:id="@+id/register_invite_code_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/login_fill_bg"
                android:drawableLeft="@drawable/register_invite_code_ic"
                android:drawablePadding="8dp"
                android:hint="@string/input_inviteCode"
                android:inputType="phone"
                android:maxLength="11"
                android:padding="8dp"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/white"
                android:textSize="12sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/register_account_commit_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@drawable/login_commit_btn_bg"
            android:gravity="center"
            android:padding="8dp"
            android:text="@string/register_text"
            android:textColor="@color/qmui_config_color_60_pure_black"
            android:textSize="12sp" />
    </LinearLayout>


</LinearLayout>
