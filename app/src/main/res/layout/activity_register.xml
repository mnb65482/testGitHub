        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/login_edit_bg"
            android:orientation="horizontal"
            android:padding="2dp">

            <EditText
                android:id="@+id/register_account_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/login_fill_bg"
                android:drawableLeft="@drawable/login_iphone_normal_yellow"
                android:drawablePadding="8dp"
                android:hint="@string/phone_num"
                android:inputType="phone"
                android:maxLength="11"
                android:padding="8dp"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/white"
                android:textSize="12sp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/login_edit_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="2dp"
            android:paddingLeft="2dp"
            android:paddingRight="2dp">

            <EditText
                android:id="@+id/register_sms_psw"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/login_fill_bg"
                android:drawableLeft="@drawable/phone_sms_code"
                android:drawablePadding="8dp"
                android:hint="@string/register_sms_code"
                android:inputType="number"
                android:maxLength="12"
                android:padding="8dp"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/white"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/register_getsms_tv"
                android:layout_width="88dp"
                android:layout_height="match_parent"
                android:background="@drawable/login_commit_btn_bg"
                android:gravity="center"
                android:padding="4dp"
                android:text="@string/get_sms_code"
                android:textColor="@color/register_sms_btn_black"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/login_edit_bg"
            android:orientation="horizontal"
            android:paddingBottom="2dp"
            android:paddingEnd="2dp"
            android:paddingStart="2dp">

            <EditText
                android:id="@+id/register_account_psw"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/login_fill_bg"
                android:drawableLeft="@drawable/login_psw_ic"
                android:drawablePadding="8dp"
                android:hint="密码"
                android:inputType="textPassword"
                android:maxLength="12"
                android:padding="8dp"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/white"
                android:textSize="12sp" />

            <CheckBox
                android:id="@+id/register_psw_visibility_cb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/login_fill_bg"
                android:button="@drawable/common_psw_visibility_bg"
                android:padding="8dp" />

        </LinearLayout>

        <!--<LinearLayout-->
        <!--android:layout_width="match_parent"-->
